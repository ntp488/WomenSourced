<script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>
<script>
window.onload = function () {
    Particles.init({
    selector: '.background',
    maxParticles: 150,
    color: ["#ffffff", "#c0deed"],
    connectParticles: true,
    sizeVariations: 5,
    minDistance: 75,
    responsive: [
        {
        breakpoint: 1920,
        options: {
            maxParticles: 200
        }
        },
        {
        breakpoint: 1080,
        options: {
            maxParticles: 150
        }
        },
        {
        breakpoint: 720,
        options: {
            maxParticles: 100
        }
        }
    ]
    });
};
</script>